<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    {% if ignore %}
      <meta name="robots" content="noindex"/>
    {% endif %}
    <link rel="stylesheet" href="{{ env.base.css }}index.css">
    <link rel="stylesheet" href="{{ env.base.css }}prism-base16-monokai.dark.css">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ env.tracking.gtag }}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', '{{ env.tracking.gtag }}');
    </script>
    <!-- <script type="module" src="https://unpkg.com/dark-mode-toggle"></script> -->

    {% include 'base-favicon.partial.njk' %}
  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>
      <!-- <aside>
        <dark-mode-toggle
          id="dark-mode-toggle-1"
          legend=""
          appearance="switch"
          dark=""
          light=""
        ></dark-mode-toggle>
      </aside>
      <script>
        window.addEventListener('colorschemechange', (e) => {
          document.body.classList.toggle('dark', e.target.mode === 'dark');
        });
      </script> -->
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
